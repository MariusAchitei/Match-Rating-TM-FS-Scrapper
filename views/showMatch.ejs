<% layout('layouts/boilerplate.ejs') -%>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
<link rel="stylesheet" href="/styles.css" />
<style>
    .list , h5{
        color:black;
    }
    a{
        color:black;
    }
    .tabela{
        /* max-height: 90vh; */
        max-width: 700px;
    }
</style>

<h2><a href="/SuperLiga/matches/<%= meci._id %>/host"><%= meci.host.name %></a>   vs   <a href="/SuperLiga/matches/<%= meci._id %>/visit"><%= meci.visit.name %></a>  </h2>

<main>
    <div class="tabela">
            <div class="competitie">
              <h2>SuperLiga</h2>
            </div>
            <div class="status1">
              <div><span>Meci terminat</span></div>
            </div>
            <div class="middle">
              <section class="scor-echipa1">
                <div>
                  <div class="team-score">
                    <div>
                      <span><%= meci.hostScore%></span>
                    </div>
                  </div>
                  <div class="team-logo">
                    <img src="<%=meci.host.logo%>" alt="logo-steaua" />
                  </div>
                </div>
                <span class="tabelaScor"><%= meci.host.name %></span>
              </section>
              <section class="scor-echipa2">
                <div>
                  <div class="team-score">
                    <div>
                      <span><%= meci.visitScore%></span>
                    </div>
                  </div>
                  <div class="team-logo">
                    <img src="<%=meci.visit.logo%>" alt="logo-cfr" />
                  </div>
                </div>
                <span class="tabelaScor"><%= meci.visit.name %></span>
              </section>
            </div>
            <div class="status-ht">
              <div>
                <span>#</span>
              </div>
              <p>HT</p>
              <div>
                <span>#</span>
              </div>
            </div>
            <div class="goluri">
              <div class="goluri-stanga">
                <ul>
                  <% for(let marcator of meci.hostGoals){ %>
                    <li><%= marcator.first + " " + marcator.last + "'" %> </li>
                  <% } %>
                </ul>
              </div>
              <div class="goluri-dreapta">
                <ul>
                  <% for(let marcator of meci.visitGoals){ %>
                    <li><%= marcator.first + " " + marcator.last + "'" %> </li>
                  <% } %>
                </ul>
              </div>
            </div>
    </div>
</main>
