<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- <link rel="stylesheet" href="/css-reset.css" /> -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <link rel="stylesheet" href="/styles.css" />
    <title>Match</title>
  </head>
  <body>
    <!-- <%- //include('./partials/navbar.ejs') %>  -->
    <a href="/SuperLiga/matches"><button class="btn btn-secondary m-3">Back</button></a>
    <main>

    <section class="rating-section">
      <% for(let jucator of meci.hostSquad){ %>
      <%if(jucator.position === "Portar" ) { %>
        <div class="profil jucator portar">
      <% } else if(jucator.pozitie === "AN") { %>
          <div class="profil jucator antrenor">
            <% } else { %>
              <div class="profil jucator">
              <% } %> 
      <!-- <div class="profil jucator"> -->
        <div class="profil-imagine">
          <div class="poza">
            <div class="pozitie">
                <%
                let position; 
                switch (jucator.position) {
                    case 'Fundaș':{
                        position = 'Def'
                        break;
                    }
                    case 'Mijlocaș':{
                        position = 'Mid'
                        break;
                    }
                    case 'Atacant':{
                        position = 'Att'
                        break;
                    }

                    default:
                        position = '-';
                } %> 
              <span><%= position %></span>
            </div>
            <img src= "<%= jucator.photo %>" />
          </div>
        </div>
        <div class="detalii">
          <div class="info-top">
            <span><%= jucator.last%></span>
            <span><%= jucator.first%></span>
          </div>
          <!-- <div class="info-note"> -->
          <form action="">
            <label>1<input type="radio" name="<%=jucator._id %>" /></label>
            <label>2<input type="radio" name="<%=jucator._id %>" /></label>
            <label>3<input type="radio" name="<%=jucator._id %>" /></label>
            <label>4<input type="radio" name="<%=jucator._id %>" /></label>
            <label>5<input type="radio" name="<%=jucator._id %>" /></label>
            <label>6<input type="radio" name="<%=jucator._id %>" /></label>
            <label>7<input type="radio" name="<%=jucator._id %>" /></label>
            <label>8<input type="radio" name="<%=jucator._id %>" /></label>
            <label>9<input type="radio" name="<%=jucator._id %>" /></label>
            <label>10<input type="radio" name="<%=jucator._id %>" /></label>
          </form>
          <!-- </div> -->
          <div class="info-bottom">
            <div class="bottom_motm">
              <label
                ><img src="/jucatori/star_potm.png" alt="potm" /><input
                  type="radio"
                  name="potm"
                  value="1"
              /></label>
            </div>
            <div class="voturi"><span>Nota de astazi</span></div>
            <div class="scor">??</div>
          </div>
        </div>
      </div>
      <% }%>
    </section>
    </main>
    <!-- <%- //include('./partials/footer.ejs') %> -->
    <!-- <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script> -->
    <script src="/match.js"></script>
  </body>
</html>
