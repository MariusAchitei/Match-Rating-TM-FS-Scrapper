
<% layout('layouts/boilerplate.ejs') -%> 

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <link rel="stylesheet" href="/styles.css" />

    <a href="/SuperLiga/matches"><button class="btn btn-secondary m-3">Back</button></a>
    <main>

      <ul>
        <% for(let marcator of meci.hostGoals){ %>
          <li style="color:black;"><%= marcator.first + ' ' + marcator.last %> </li>
        <% } %>  
      </ul>
      <ul>
        <% for(let marcator of meci.visitGoals){ %>
          <li style="color:black;"><%= marcator.first + ' ' + marcator.last %> </li>
        <% } %>  
      </ul>

      <section class="rating-section">
        <% for(let jucator of meci.hostSquad){ %>
        <%if(jucator.position === "Portar" ) { %>
          <div class="profil jucator portar">
        <% } else if(jucator.pozitie === "AN") { %>
            <div class="profil jucator antrenor">
              <% } else { %>
                <div class="profil jucator">
                <% } %> 
        <!-- <div class="profil jucator"> -->
          <div class="profil-imagine">
            <div class="poza">
              <div class="pozitie">
                  <%
                  let position; 
                  switch (jucator.position) {
                      case 'Fundaș':{
                          position = 'Def'
                          break;
                      }
                      case 'Mijlocaș':{
                          position = 'Mid'
                          break;
                      }
                      case 'Atacant':{
                          position = 'Att'
                          break;
                      }

                      default:
                          position = '-';
                  } %> 
                <span><%= position %></span>
              </div>
              <img src= "<%= jucator.photo %>" />
            </div>
          </div>
          <div class="detalii">
            <div class="info-top">
              <span><%= jucator.last%></span>
              <span><%= jucator.first%></span>
            </div>
            <!-- <div class="info-note"> -->
            <form action="">
              <label>1<input type="radio" name="<%=jucator._id %>" /></label>
              <label>2<input type="radio" name="<%=jucator._id %>" /></label>
              <label>3<input type="radio" name="<%=jucator._id %>" /></label>
              <label>4<input type="radio" name="<%=jucator._id %>" /></label>
              <label>5<input type="radio" name="<%=jucator._id %>" /></label>
              <label>6<input type="radio" name="<%=jucator._id %>" /></label>
              <label>7<input type="radio" name="<%=jucator._id %>" /></label>
              <label>8<input type="radio" name="<%=jucator._id %>" /></label>
              <label>9<input type="radio" name="<%=jucator._id %>" /></label>
              <label>10<input type="radio" name="<%=jucator._id %>" /></label>
            </form>
            <!-- </div> -->
            <div class="info-bottom">
              <div class="bottom_motm">
                <label
                  ><img src="/jucatori/star_potm.png" alt="potm" /><input
                    type="radio"
                    name="potm"
                    value="1"
                /></label>
              </div>
              <div class="voturi"><span>Nota de astazi</span></div>
              <div class="scor">??</div>
            </div>
          </div>
        </div>
        <% }%>
      </section>
    </main>
