<% layout('layouts/boilerplate.ejs') -%>


<form action="/teams" method="post">
    <div class="d-block col-md-6">
      <label for="name" class="form-label">Team name</label>
      <input type="text" class="form-control" id="name" name="name">
    </div>
    <div class="d-block col-md-6">
      <label for="logo" class="form-label">Team logo</label>
      <input type="text" class="form-control" id="logo" name="logo">
    </div>
    <div class="d-block col-md-6">
        <label for="nameTM" class="form-label">Team nameTM</label>
        <input type="text" class="form-control" id="nameTM" name="nameTM">
    </div>
    <div class="d-block col-md-6">
        <label for="aliasName" class="form-label">Team Alias</label>
        <input type="text" class="form-control" id="aliasName" name="aliasName">
    </div>
    <div class="d-block col-md-6">
        <label for="url" class="form-label">Team TM-Url</label>
        <input type="url" class="form-control" id="url" name="url">
      </div>
    <div class="d-block col-md-4">
      <label for="inputState" class="form-label">League</label>
      <select id="inputState" class="form-select" name="league">
        <%  %> 
        <option selected disabled value="">Alegeti liga</option>
        <% for(let league of leagues){ %>
            <option value="<%= league._id %>"><%= league.name %> </option>
        <% } %>  
      </select>
    </div>
